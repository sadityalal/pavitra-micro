# Essential Environment Variables
APP_ENV=production

# Database Connection
DB_HOST=mysql
DB_PORT=3306
DB_NAME=pavitra_trading
DB_USER=pavitra_app
DB_PASSWORD=app123
DB_ROOT_PASSWORD=root123

# JWT Security (must be in env for security)
JWT_SECRET=production-jwt-secret-key-change-this-immediately-2024
JWT_ALGORITHM=HS256

# Service Ports
AUTH_SERVICE_PORT=8001
PRODUCT_SERVICE_PORT=8002
ORDER_SERVICE_PORT=8003
USER_SERVICE_PORT=8004
PAYMENT_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
FRONTEND_PORT=80

# File Uploads
UPLOAD_PATH=/app/uploads

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:8001
PRODUCT_SERVICE_URL=http://product-service:8002
ORDER_SERVICE_URL=http://order-service:8003
USER_SERVICE_URL=http://user-service:8004
PAYMENT_SERVICE_URL=http://payment-service:8005
NOTIFICATION_SERVICE_URL=http://notification-service:8006
